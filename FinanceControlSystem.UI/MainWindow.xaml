<Window x:Class="FinanceControlSystem.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceControlSystem.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height ="1*"></RowDefinition>
                        <RowDefinition Height ="1*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Button x:Name="ButtonAddAccount" Content="Button" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top" Click="Button_Click" RenderTransformOrigin="0.464,2.122" Grid.Row="1"/>
                    <ListBox Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                    <TextBox HorizontalAlignment="Center" Margin="0,46,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                    <TextBox HorizontalAlignment="Center" Margin="0,76,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                    <TextBox HorizontalAlignment="Center" Margin="0,115,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                    <Label x:Name="LabelName" Content="Название" HorizontalAlignment="Left" Margin="65,42,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="LabelType" Content="Тип кошелька" HorizontalAlignment="Left" Margin="47,76,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="LabelBalance" Content="Деньги" HorizontalAlignment="Left" Margin="52,111,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
