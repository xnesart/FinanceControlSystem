<UserControl x:Class="FinanceControlSystem.UI.Components.FinanceListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinanceControlSystem.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="450">
    <Border BorderBrush="Red" BorderThickness="3">
    <Grid x:Name="GridItem" Background="#FFEFDBDB">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="LabelName" Content="Name" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontFamily="Comic Sans MS" FontSize="18"/>
        <Label x:Name="LabelBalance" Content="Balance" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Row="1" VerticalAlignment="Center" RenderTransformOrigin="0.142,0.416" FontFamily="Comic Sans MS" FontSize="18" FontStyle="Italic"/>
    </Grid>
    </Border>
</UserControl>
